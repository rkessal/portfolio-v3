footer.footer
  .footer__container
    .footer__links
      each slice in footer.data.navigation.data.body
        if (slice.slice_type == 'navigation_link')
          .footer__links__item
            a(href=PrismicDOM.asLink(slice.primary.navigation_link_url))=slice.primary.navigation_link_label
    .footer__contact
      a(href=`mailto:${footer.data.email}`)=footer.data.email
    .footer__logo
      figure
        img(src=PrismicDOM.asImageSrc(footer.data.logo))
    .footer__bottom
      .footer__copyrights=footer.data.copyrights
      .footer__privacy
        a(href=PrismicDOM.asLink(footer.data.privacy_policy))=footer.data.privacy_policy
        a(href=PrismicDOM.asLink(footer.data.cookies_settings))=footer.data.cookies_settings
